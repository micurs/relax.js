<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <!-- Bootstrap theme -->
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css" rel="stylesheet">
  <title><%= siteName %></title>
  <style>
    body {
      padding-top: 0px;
      padding-bottom: 0px;
      font-size: 15px;
    }

    .navbar {
      margin-bottom: 20px;
    }

  </style>
</head>
<%
function getResourceLI( m, res, index , resArray, father ) {
  var indent = _.str.pad(' ', (_.str.count(father,'/')+1)*2 );
  var cc = res.childCount()
  // console.log('['+index+'] '+res.name() + ' with '+cc+' children' )
  // var link = (father+_.str.slugify(res.name())+'/'+index).replace(/\/0\//g,'/');
  var link = father+_.str.slugify(res.name())+'/'+index;
  link = link.replace(/\/0(\/)*/g,'/');
  var name = res.name();
  m += indent +'<li><i class="fa-li fa fa-file-o"></i><a href="'+link+'">'+name+'</a>'
  m += '</li>\n';
  return m;
}

function getResourcesUL( resources, root ) {
  var indent = _.str.pad('',_.str.count(root,'/')*2);
  var m = indent+'<ul class="fa-ul">\n';
  _.each( resources , function( resArray ) {
     m += _.reduce( _.values( resArray),
                      function( m , childRes, index ) {
                        var rli = getResourceLI( m, childRes, index, resArray, root );
                        if ( childRes.childCount()>0 )
                          rli += getResourcesUL(childRes._resources, root+_.str.slugify(childRes.name())+'/'+index+'/' );
                        return rli;
                      },
                      '');
   });
  m += indent+'</ul>\n';
  return m;
}

%>
<body>
  <div class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="#"><i class="fa fa-chevron-circle-right"></i> relax.js v.<%= _version %></a>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="jumbotron">
      <h1><%= siteName %></h1>
    </div>
    <div class="row">
      <div class="col-md-8">
        <h2><%= siteName %> Resources</h2>
        <p>
<% print( getResourcesUL(_resources, '/' ) ) %>
        </p>
      </div>
      <div class="col-md-4">
        <h2>Info</h2>
        <h3>
          Welcome to your relax.js site!
        </h3>
        <p>
          This page is automatically generated and it is the default view for your site as resource.
        </p>
        <h3>
          Learn more
        </h3>
        <ul  class="fa-ul">
          <li><i class="fa-li fa fa-chevron-circle-right"></i><a href="">relaxjs.io</a> official site.</li>
          <li><i class="fa-li fa fa-chevron-circle-right"></i>Gitub official <a href="">repo</a></li>
        </ul>
        <h3>How to disable this page</h3>
        <p>
          Use the setHome() on the Site object and pass the path to your home resource.
        </p>
        <p>
          For example:
        </p>
        <p>
          <kbd> site.setHome('/home') </kbd>
        </p>
        </p>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>
</html>
